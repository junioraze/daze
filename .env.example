# Exemplo de configuração de ambiente
# Copie para .env e ajuste conforme necessário

# Configurações da aplicação
WAVE_APP_NAME="Minha Aplicação Wave"
WAVE_THEME="neon"
WAVE_DEBUG="true"
WAVE_AUTH_ENABLED="true"

# Configurações do servidor
WAVE_HOST="localhost"
WAVE_PORT="10101"

# Configurações de banco de dados (opcional)
DATABASE_URL="sqlite:///app.db"
# DATABASE_URL="postgresql://user:pass@localhost/dbname"

# Configurações de cache (opcional)
REDIS_URL="redis://localhost:6379"

# Configurações de API externa (opcional)
API_KEY="sua_api_key_aqui"
API_BASE_URL="https://api.exemplo.com"

# Configurações de email (opcional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="seu_email@gmail.com"
SMTP_PASS="sua_senha"

# Configurações de logging
LOG_LEVEL="INFO"
LOG_FILE="app.log"
